source 'https://rubygems.org'

group :development do
  gem 'rubocop'
  gem 'rubocop-sketchup'
  gem 'yard'
  gem 'bundler_ext'
  gem "rainbow",                  :require => [ "rainbow", "rainbow/ext/string", "rainbow/refinement" ]
  gem "awesome_print"
  gem "neovim",                   :require => false
end

group :test do
  gem 'sketchup-api-stubs'
  gem 'minitest-reporters'
end

group :test, :development do
  gem 'pry'
  gem 'pry-byebug'
  gem "pry-doc"
  gem "pry-theme"
  gem "pry-rescue"
  gem 'rake'
end
